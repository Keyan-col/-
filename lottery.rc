#include <windows.h>
#include "resource.h"

IDD_NAMELIST DIALOG DISCARDABLE 0, 0, 300, 200
STYLE DS_MODALFRAME | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "参与者名单"
FONT 9, "Microsoft YaHei UI"
BEGIN
    LISTBOX         IDC_NAMELIST, 10, 10, 280, 150, LBS_NOTIFY | WS_VSCROLL | WS_TABSTOP
    DEFPUSHBUTTON   "确定", IDOK, 120, 170, 60, 20
END

IDD_INPUT DIALOG DISCARDABLE 0, 0, 250, 130
STYLE DS_MODALFRAME | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "设置中奖人数"
FONT 9, "Microsoft YaHei UI"
BEGIN
    LTEXT           "请输入中奖人数(1-10)：", IDC_STATIC, 10, 10, 200, 20
    EDITTEXT        IDC_INPUT, 10, 35, 220, 25, ES_AUTOHSCROLL | ES_NUMBER
    DEFPUSHBUTTON   "确定", IDOK, 85, 70, 80, 25
END